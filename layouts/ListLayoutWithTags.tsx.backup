'use client'

import { usePathname } from 'next/navigation'
import { slug } from 'github-slugger'
import { CoreContent } from 'pliny/utils/contentlayer'
import type { Blog } from 'contentlayer/generated'
import Link from '@/components/Link'
import Tag from '@/components/Tag'
import siteMetadata from '@/data/siteMetadata'
import Pagination from '@/components/Pagination/Pagination'
import { useState, useEffect } from 'react'
import dynamic from 'next/dynamic'
import { getPublishedTags } from '../utils/tagUtils'

const ClientSidePostList = dynamic(() => import('../components/ClientSidePostList'), { ssr: false })

interface PaginationProps {
  totalPages: number
  currentPage: number
}

interface ListLayoutProps {
  posts: (CoreContent<Blog> & { image?: string })[]
  title: string
  initialDisplayPosts?: (CoreContent<Blog> & { image?: string })[]
  pagination?: PaginationProps
}

export default function ListLayoutWithTags({
  posts,
  title,
  initialDisplayPosts = [],
  pagination,
}: ListLayoutProps) {
  const pathname = usePathname()
  const basePath = pathname ? pathname.split('/')[1] : ''
  const [tagCounts, setTagCounts] = useState<Record<string, number>>({})
  const [mounted, setMounted] = useState(false)

  useEffect(() => {
    const { tagCounts: publishedTagCounts } = getPublishedTags()
    setTagCounts(publishedTagCounts)
    setMounted(true)
  }, [])

  const sortedTags = Object.keys(tagCounts).sort((a, b) => tagCounts[b] - tagCounts[a])

  const displayPosts = initialDisplayPosts.length > 0 ? initialDisplayPosts : posts

  return (
    <>
      <div>
        <div className="xl:max-w-7xlpb-6 mx-auto flex flex-col pt-6 lg:max-w-5xl">
          <h1 className="mt-4 border-none pl-0 text-2xl text-[#686868] lg:ml-0 lg:max-w-5xl xl:m-auto xl:mt-8 xl:max-w-7xl xl:pl-0">
            {title}
          </h1>
        </div>
        <div className="mx-auto flex flex-col lg:max-w-5xl xl:max-w-7xl">
          <div className="hidden h-full max-h-screen min-w-[280px] flex-wrap overflow-auto pt-5 sm:flex">
            <div className="px-0 py-4">
              <ul className="flex flex-wrap gap-2">
                {sortedTags.map((t) => {
                  return (
                    <li
                      key={t}
                      className="mb-2 flex rounded-md bg-gradient-to-br from-[#F3F2F5] to-[#EEEEEE] "
                    >
                      {pathname.split('/tags/')[1] === slug(t) ? (
                        <h3 className="inline px-3 py-2 text-sm font-semibold uppercase text-neutral-500">
                          {`${t} (${tagCounts[t]})`}
                        </h3>
                      ) : (
                        <Link
                          href={`/tags/${slug(t)}`}
                          className="px-3 py-2 text-sm font-medium uppercase text-gray-500 hover:text-neutral-500"
                          aria-label={`Ver publicaciones etiquetadas ${t}`}
                        >
                          {`${t} (${tagCounts[t]})`}
                        </Link>
                      )}
                    </li>
                  )
                })}
              </ul>
            </div>
          </div>

          <div className="mx-auto lg:max-w-5xl xl:max-w-7xl">
            {mounted ? <ClientSidePostList posts={displayPosts} /> : <div>Loading...</div>}
            {pagination && pagination.totalPages > 1 && (
              <Pagination
                currentPage={pagination.currentPage}
                totalPages={pagination.totalPages}
                basePath={basePath}
              />
            )}
          </div>
        </div>
      </div>
    </>
  )
}
